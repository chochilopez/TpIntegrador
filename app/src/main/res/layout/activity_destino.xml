<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dos"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="@dimen/l"
            android:layout_marginTop="@dimen/l"
            android:layout_marginBottom="@dimen/l"
            android:layout_weight="1"
            app:srcCompat="@drawable/globe" />

        <TextView
            android:id="@+id/tvTituloDestino"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/l"
            android:layout_weight="1"
            android:fontFamily="@font/ubuntu_bold_italic"
            android:gravity="center"
            android:text="ElegÃ­ tu destino"
            android:textColor="@color/tres"
            android:textSize="@dimen/xl" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/l"
            android:layout_weight="1"
            android:text="Nombre del destino:"
            android:textColor="@color/cuatro" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/l"
            android:layout_marginEnd="@dimen/l"
            android:layout_weight="1"
            android:text="Cantidad de personas:"
            android:textColor="@color/cuatro" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/l"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editNombre"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/l"
            android:layout_weight="1"
            android:background="@color/tres"
            android:fontFamily="@font/ubuntu_medium_italic"
            android:hint="Culquier nombre"
            android:inputType="textPersonName"
            android:padding="@dimen/s"
            android:textColor="@color/cuatro"
            android:textSize="16dp" />

        <Spinner
            android:id="@+id/comboPersonas"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/l"
            android:layout_marginEnd="@dimen/l"
            android:layout_weight="1"
            android:background="@color/tres"
            android:entries="@array/personas"
            android:fontFamily="@font/ubuntu_medium_italic"
            android:padding="@dimen/s"
            android:textColor="@color/cuatro" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/l"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Selecciona el precio de tu habitacion:"
            android:textColor="@color/cuatro" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/seekPrecio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:progressTint="@color/cinco"
            android:thumbTint="@color/cinco"
            android:tickMarkTint="@color/cuatro" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/l"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/l"
            android:layout_marginEnd="@dimen/l"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Desde $1"
            android:textColor="@color/cuatro" />

        <TextView
            android:id="@+id/tvPrecio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/l"
            android:layout_marginEnd="@dimen/l"
            android:layout_weight="1"
            android:gravity="right"
            android:text="Hasta $10000"
            android:textColor="@color/cuatro" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/l"
            android:layout_marginEnd="@dimen/l"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Tipo de alojamiento"
            android:textColor="@color/cuatro" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/l"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/comboTipoHabitacion"
            android:layout_width="106dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/l"
            android:layout_marginEnd="@dimen/l"
            android:layout_weight="1"
            android:background="@color/tres"
            android:entries="@array/tipos_alojamientos"
            android:fontFamily="@font/ubuntu_medium_italic"
            android:padding="@dimen/s"
            android:textColor="@color/cuatro" />

        <CheckBox
            android:id="@+id/cbInternet"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:buttonTint="@color/cinco"
            android:text="Con internet"
            android:textColor="@color/cuatro" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnAgregarDestino"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="@dimen/l"
            android:layout_weight="1"
            android:background="@drawable/btn_azul_rounded"
            android:text="Agregar destino"
            android:textColor="@color/cuatro" />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginStart="@dimen/l"
            android:layout_marginEnd="@dimen/l"
            android:layout_weight="1"
            android:background="@drawable/btn_rojo_rounded"
            android:text="Buscar destino"
            android:textColor="@color/cuatro" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvResultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/l"
        android:layout_marginTop="@dimen/l"
        android:layout_marginBottom="@dimen/m"
        android:fontFamily="@font/ubuntu_bold"
        android:text="Mostrando"
        android:textColor="@color/uno"
        android:textSize="@dimen/l" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDestinos"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>