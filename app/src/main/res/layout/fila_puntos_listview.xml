<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margenM"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvPunto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margenL"
            android:layout_weight="1"
            android:fontFamily="@font/ubuntu_italic"
            android:text="Punto"
            android:textColor="@color/terciario"
            android:textSize="@dimen/l" />

        <Button
            android:id="@+id/btnListaPunto"
            android:layout_width="wrap_content"
            android:background="@color/rojo"
            android:fontFamily="@font/ubuntu"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/margenL"
            android:text="Visitar" />
    </LinearLayout>
</LinearLayout>